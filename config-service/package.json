{
  "name": "config-service",
  "version": "1.0.0",
  "description": "Microservicio de lectura de configuraciones implementando arquitectura hexagonal",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest --clearCache && jest --detectOpenHandles --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "build:test": "tsc --project tsconfig.test.json"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "crypto-js": "^4.2.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "logger": "^0.0.1",
    "luxon": "^3.6.1",
    "mongoose": "^8.0.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/logger": "^0.0.5",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.19.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
