{
	"info": {
		"_postman_id": "auth-service-collection",
		"name": "Auth Service API",
		"description": "Colección de Postman para el servicio de autenticación que incluye endpoints de login, validación de tokens y gestión de claves públicas.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "auth-service"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Verifica el estado del servicio de autenticación"
			},
			"response": []
		},
		{
			"name": "Login",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"admin\",\n    \"password\": \"password\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"login"
					]
				},
				"description": "Autentica un usuario con credenciales y devuelve un token JWT"
			},
			"response": [],
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    pm.environment.set('auth_token', response.token);",
							"    pm.environment.set('current_user', response.user);",
							"    console.log('Token guardado:', response.token);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "Validate Token",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"token\": \"{{auth_token}}\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/validate",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"validate"
					]
				},
				"description": "Valida un token JWT y devuelve información sobre su validez"
			},
			"response": []
		},
		{
			"name": "Get Public Key",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/public-key",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"public-key"
					]
				},
				"description": "Obtiene la llave pública RSA para verificar tokens JWT"
			},
			"response": []
		},
		{
			"name": "Swagger Documentation",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/swagger/index.html",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"swagger",
						"index.html"
					]
				},
				"description": "Accede a la documentación interactiva de Swagger"
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
} 